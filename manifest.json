{
  "manifest_version": 3,
  "name": "Faaah! Twitter Like Sound",
  "version": "1.0.0",
  "description": "Plays a FAAAH sound every time you like a tweet on X/Twitter!",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*", "*://x.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "icons": {
    "48": "icon.png"
  }
}
